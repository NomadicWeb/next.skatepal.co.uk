-# indicators
%ol.carousel-indicators
  %li.active{"data-target" => "#homecarousel", "data-slide-to" => "0"}

-# images in the carousel
.carousel-inner
  .item.active
    %img{:src => "http://dummyimage.com/800x600/c2a9c2/4d4e69.jpg", :alt => ""}

-# left/right UI controls for carousel
%a.left.carousel-control{:href => "#homecarousel", :role => "button", "data-slide" => "prev"}
  %span.glyphicon.glyphicon-chevron-left
%a.right.carousel-control{:href => "#homecarousel", :role => "button", "data-slide" => "next"}
  %span.glyphicon.glyphicon-chevron-right
