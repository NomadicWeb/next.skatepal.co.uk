{% for post in contents.posts limit:3 %}
.a-post

  %h3.post-title.eng-lang {{ post.title | escape}}
  %h3.post-title.arb-lang.hidden {{ post.title_ar | escape}}

  %small.post-info {{ post.posted_at | localized_date: %m/%d/%y }}

  %p.post-info.eng-lang  {{ post.body | truncatewords: 30, ""  | strip_html }}
  %p.post-info.arb-lang.hidden {{ post.body_ar | truncatewords: 30, ""  | strip_html }}

  %small.read-more
    .post-read-more.eng-lang
      %a{:href => "/posts/{{ post._slug }}"} Read the full story
  %small.read-more.arb-lang.hidden
    .post-read-more
      %a{:href => "/posts/{{ post._slug }}"} قراءة القصة الكاملة

  {% if post.featured_image.url %}
  %img.post-featured-image.img-responsive{:src => "{{ post.featured_image.url }}", :alt => "{{ post.title | escape }}"}
  {% endif %}
{% endfor %}


%a.see-all.eng-lang{:href => "/posts"} See all posts ...
%a.see-all.arb-lang.hidden{:href => "/posts"} رؤية جميع المشاركات
