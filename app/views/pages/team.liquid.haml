position: 4
---

-# init the filters array
%script var filters = [];

-# for each project, push each field onto 'fs'
{% for member in contents.team %}
%script
  filters.push({
  "Team":   "{{ member.filter }}", 
  });
{% endfor %}

{% extends 'index'%}

{% block 'carousel' %}
//do nothing
{% endblock %}

{% include 'header' %}

{% block 'head' %}
%small.page-breadcrumb.en-lang {{ page.title }} 
%small.page-breadcrumb.arb-lang.hidden {{ page.title }} - AR

%p.pull-right.right-tagline.eng-lang
  {% editable_text title, hint: "English tagline", format: raw, rows: 2 %}{% endeditable_text %}
%p.pull-right.right-tagline.arb-lang.hidden
  {% editable_text title, hint: "Arabic tagline", format: raw, rows: 2 %}{% endeditable_text %}

{% endblock %}

{% block 'main' %}
.row
  .col-md-3.filter-column
    .content-block
      %ul#filter
        -# we create this list from main.js
        -# by writing unique filters to the DOM
        %li 
          %li.arrange 
            Arrange by
            %a.active{:href => "#", "data-filter" => "*"} All
        %script write_filters(dedup(filters));

  .col-md-9
    #grid
      {% for member in contents.team %}

      {% capture filter %} {{ member.filter | downcase | dasherize }} {% endcapture %}

      .item{:class => "{{filter}}"}
        .content-block.team
          {{ member.img.url | image_tag: 'class:img-responsive'}}
          %p.member-name {{ member.name }}
      {% endfor %}
      :javascript
        get_layout(20, 25);
{% endblock %}

{% include 'footer' %}
