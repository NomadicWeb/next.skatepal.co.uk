---
title: Featured projects template
listed: false
published: true
content_type: "featured_projects"
---

:javascript
  var lat = {{featured_project.lat_coord}};
  var lon = {{featured_project.lon_coord}};
  var showmap = true;
  if(lat == 0 && lon == 0){
    showmap = false;
  }
{% extends parent %}


{% block 'head' %} 
%small.page-breadcrumb.eng-lang Projects -> {{ page.title }} 
%small.page-breadcrumb.arb-lang.hidden المشاريع -> {{ page.title_ar }}

%p.pull-right.right-tagline.eng-lang
  {% editable_text title, hint: "a title", format: raw, rows: 2 %}{% endeditable_text %}
%p.pull-right.right-tagline.arb-lang.hidden
  {% editable_text title, hint: "a title", format: raw, rows: 2 %}{% endeditable_text %}
{% endblock %}


{% block main %}
.row
  .col-md-12
    .col-md-3
      .content-block
        .project-info.eng-lang
          %p Date: {{ featured_project.project_date | localized_date: "20%y"}}
          %p Client: {{ featured_project.client }}
          %p Status: {{ featured_project.status }}
          %p Area: {{ featured_project.area }}
          %p Location: {{ featured_project.location }}
          %p Sector: {{ featured_project.sectors }}

        .project-info.arb-lang.hidden
          %p التاريخ: {{ featured_project.project_date | localized_date: "20%y"}}
          %p العميل: {{ featured_project.client_ar }}
          %p الحالة: {{ featured_project.status_ar }}
          %p المنطقة: {{ featured_project.area_ar }}
          %p المكان: {{ featured_project.location_ar }}
          %p القطاع: {{ featured_project.sectors_ar }}

        .project-description.eng-lang
          %p {{ featured_project.description }}

        .project-description.arb-lang.hidden
          %p {{ featured_project.description_ar }}

        .project-extras
          .project-map#hide
            %p.eng-lang#hide Location
            %p.arb-lang.hidden#hide الموقع
            #map-canvas
    .col-md-9
      .content-block.project-images
        {{ featured_project.project_image1.url | image_tag: 'class:img-responsive header-img' }}
        {{ featured_project.project_image2.url | image_tag: 'class:img-responsive float-img' }}
        {{ featured_project.project_image3.url | image_tag: 'class:img-responsive' }}
        {{ featured_project.project_image4.url | image_tag: 'class:img-responsive' }}
%script{"type" => "text/javascript", "src" => "https://maps.googleapis.com/maps/api/js?key=AIzaSyCfWhP-xURy2HzjXVsmSdW_icaNngybK48"}
{% endblock %}
