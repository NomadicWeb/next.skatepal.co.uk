    .content-block
      %h5 
        %p Arrange by:
        %ul

          // init the filters array
          %script var filters = [];

          {% for project in contents.featured_projects %}
          %script
            // for each project, push each field onto 'filters'
            filters.push(
            "{{ project.client }}", "{{ project.status }}", 
            "{{ project.area }}", "{{ project.location }}", 
            "{{ project.sectors }}"
            );
          {% endfor %}

          // remove duplicates
          %script
            filters = filters.filter(function(v, i, a){return a.indexOf (v) == i});

