---
title: Projects
listed: true
published: true
position: 3
---

-# init the filters array
%script var filters = [];

-# for each project, push each field onto 'fs'
{% for project in contents.featured_projects %}
%script
  if(is_lang("arb")){
    filters.push({
    "Client":   "{{ project.client_ar }}",
    "Status":   "{{ project.status_ar }}",
    "Area":     "{{ project.area_ar }}",
    "Location": "{{ project.location_ar }}",
    "Date":     "{{ project.project_date | localized_date: "20%y" }}",
    "Sector":   "{{ project.sectors_ar }}"
    });
  }else{
    filters.push({
    "Client":   "{{ project.client }}",
    "Status":   "{{ project.status }}",
    "Area":     "{{ project.area }}",
    "Location": "{{ project.location }}",
    "Date":     "{{ project.project_date | localized_date: "20%y" }}",
    "Sector":   "{{ project.sectors }}"
    });
  }
{% endfor %}

{% extends 'index'%}

{% block 'carousel' %}
//do nothing
{% endblock %}

{% block 'head' %}
%small.page-breadcrumb {{ page.title }}
{% endblock %}

{% block 'main' %}
.row
  .col-md-3.filter-column
    .content-block
      %ul#filter
        -# we create this list from main.js
        -# by writing unique filters to the DOM
        %li
          %li.arrange.dyn-lang
            Arrange by
            %a.active.dyn-lang{:href => "#", "data-filter" => "*"} All
        %script write_filters(dedup(filters));

  .col-md-9
    #grid
      {% for project in contents.featured_projects %}

      {% capture client %} 
      {{project.client | dasherize | downcase}} 
      {% endcapture %}

      {% capture client_ar %} 
      {{project.client_ar | dasherize | downcase}} 
      {% endcapture %}

      {% capture status %} 
      {{project.status | dasherize | downcase}} 
      {% endcapture %}

      {% capture status_ar %} 
      {{project.status_ar | dasherize | downcase}} 
      {% endcapture %}

      {% capture area %} 
      {{project.area | dasherize | downcase}} 
      {% endcapture %}

      {% capture area_ar %} 
      {{project.area_ar | dasherize | downcase}} 
      {% endcapture %}

      {% capture location %} 
      {{project.location | dasherize | downcase}} 
      {% endcapture %}

      {% capture location_ar %} 
      {{project.location_ar | dasherize | downcase}} 
      {% endcapture %}

      {% capture sector %} 
      {{project.sectors | dasherize | downcase}} 
      {% endcapture %}

      {% capture sector_ar %} 
      {{project.sectors_ar | dasherize | downcase}} 
      {% endcapture %}

      {% capture project_date %} 
      {{project.project_date | localized_date: "20%y"}} 
      {% endcapture %}

      // @TODO - do check if is arabic, if it is, switch the varibales!
      .col-md-3.item{:class => "{{client}} {{status}} {{area}} {{location}} {{project_date}} {{sector}}"}
        .content-block
          %a{:href => "/projects/{{ project._slug }}"}
            // @TODO - if arabic, use the other arabic fields
            %p.project-title    {{ project.title }}
            %p.project-info {{ project.location }} | {{ project.sectors }}
          {{ project.featured_image.url | image_tag: 'class:img-responsive'}}
      {% endfor %}
      :javascript
        get_layout(45, 50);
{% endblock %}
{% include 'footer' %}
