{% include 'header' %}

%body
  .container
    .row.logo_and_navbar
      .col-md-3
        %p.pull-left LOGO

      .col-md-9
        %p.pull-right NAV BAR

  .container
    %div#fixedsocial
      - ["facebook", "twitter", "youtube"].each do |social|
        %div{:class => "#{social}flat"}
          %i{:class => "fa fa-#{social} fa-2x", "data-toggle" => "tooltip", "title" => "Join us on #{social}!"}

    .container-fluid.content-background
      .row.header
        .col-md-12
          .content-block.topmost
            {% block 'head' %} 
            {% editable_text title, hint: "a title", format: raw, rows: 2 %}
            {% endeditable_text %}
            {% endblock %}

      {% block 'main' %}

      .row
        .col-md-8
          .row
            .col-md-12
              .content-block
                CAROUSEL

          .row
            .col-md-12
              .content-block
                FEATURED

        .col-md-4
          .row
            .col-md-12
              .content-block
                SIDEBAR

      {% endblock %}

    {% include 'footer' %}
