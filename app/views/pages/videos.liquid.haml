-# init the filters array
%script var filters = [];

-# for each project, push each field onto 'fs'
{% for video in contents.trick_tip %}
%script
  filters.push({
  "Type":   "{{ video.filter }}", 
  });
{% endfor %}

{% extends 'index'%}

{% block 'carousel' %}
//do nothing
{% endblock %}

{% include 'header' %}

{% block 'head' %} 
%small.page-breadcrumb.en-lang {{ page.title }} 
%small.page-breadcrumb.arb-lang.hidden {{ page.title }} - AR

%p.pull-right.right-tagline.eng-lang
  {% editable_text title, hint: "English tagline", format: raw, rows: 2 %}{% endeditable_text %}
%p.pull-right.right-tagline.arb-lang.hidden
  {% editable_text title, hint: "Arabic tagline", format: raw, rows: 2 %}{% endeditable_text %}

{% endblock %}

{% block 'main' %}
.row.video-content-padding
  .col-md-3.filter-column
    .content-block
      %ul#filter
        %li
          %li.arrange 
            Arrange by
            %a.active{:href => "#", "data-filter" => "*"} All
        %script write_filters(dedup(filters));
  .col-md-9
    #grid.trick-tips-grid
      {% for video in contents.trick_tip %}
      {% capture filter %} {{ video.filter | downcase | dasherize }} {% endcapture %}

      .item{:class => "{{filter}}"}
        .content-block
          %iframe.allowfullscreen{ "src" => "{{ video.url }}", "frameborder" => "0", "width" => "100%", "height" => "200"}
          %p.video-name{ "align" => "center"} {{ video.name }}
      {% endfor %}
      :javascript
        get_layout(28, 30);
{% endblock %}
{% include 'footer' %}
